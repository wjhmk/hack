


 <%= link_to '近況報告を投稿する', new_post_path %>




 <!-- ***** App Feature Area Start ***** -->
 <section class="app-features-area">
                     <div class="container">
                         <div class="row">
                             <div class="col-12 col-md-6">
                                 <div class="app-features-content">
                                     <h2>All 近況報告</h2>
                                     <div class="row">

                                             <% @posts.each do |post| %>
                                                     <!-- Single Feature Area -->
                                                     <div class="col-12 col-sm-6">
                                                         <div class="single-feature-area">
                                                             <img src="assets/img/bg-img/feature-2.png" alt="">
                                                             <h5><%= link_to(post.post_content, "/posts/#{post.id}") %></h5>
                                                             <p><%= post.user.email %></p>
                                                             <!-- <p>質問者email：<%# question.user.email %></p> -->
                                                         </div>
                                                     </div>
                                            <% end %>

                                     </div>
                                 </div>
                             </div>
                         </div>
                     </div>

         <!-- App Feature Thumb -->
         <div class="app-feature-side-thumb" >
             <!-- <img src="assets/img/bg-img/feature-side.jpg" alt=""> -->
             <img src="assets/img/bg-img/posts.jpg" alt="">
         </div>
     </section>
